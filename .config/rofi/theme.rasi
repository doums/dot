* {
  background-color: #404040;
  text-color: #bfbfbf;
  font: "JetbrainsMonoSZ 12";
  border: 0;
}

window {
  anchor: north;
  location: north;
  padding: 0.7em;
  y-offset: 400px;
  width: 16em;
}

mainbox {
  children: [ mode-switcher, inputbar, message, listview ];
}

prompt {
  enabled: false;
}

entry {
  padding: 0.4em;
  placeholder: "Search";
  placeholder-color: #6e6e6e;
  cursor: text;
}

element {
  padding: 0.4em;
  cursor: pointer;
}

element-icon {
  size: 1.4em;
  margin: 0 0.6em 0 0;
  cursor: pointer;
}

element-text {
  highlight: bold;
  cursor: pointer;
  vertical-align: 0.5;
}

element selected {
  text-color: #dadada;
  highlight: bold #dadada;
  background-color: #2d2d2d;
  border-radius: 15px;
}

element-icon selected {
  background-color: #2d2d2d;
}

element-text selected {
  background-color: #2d2d2d;
}

mode-switcher {
  margin: 0 0 0.6em 0;
}

listview {
  fixed-height: false;
  scrollbar: false;
  cycle: true;
  lines: 5;
  margin: 0.8em 0 0 0;
}

button {
  padding: 0.5em 0;
  cursor: pointer;
  horizontal-align: 0.5;
  text-color: #8f8f8f;
}

button selected {
  text-color: #fafafa;
  padding: 0.5em 0;
}
