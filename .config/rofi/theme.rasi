* {
  background-color: #404040;
  text-color: #bfbfbf;
  font: "Inconsolata Regular 14";
  border: 0px;
}

window {
  anchor: north;
  location: north;
  padding: 30px;
  y-offset: 400px;
  width: 700px;
}

mainbox {
  children: [ mode-switcher, inputbar, message, listview ];
}

prompt {
  enabled: false;
}

entry {
  padding: 10px 20px;
}

element {
  padding: 10px 20px;
  highlight: bold;
}

element selected {
  text-color: #fafafa;
  highlight: bold;
}

listview {
  fixed-height: false;
  scrollbar: true;
  cycle: true;
  lines: 5;
}

button {
  padding: 10px 0;
}

button selected {
  text-color: #fafafa;
  padding: 10px 0;
}
