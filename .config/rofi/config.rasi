configuration {
  modi: "drun,window";
  show-icons: true;
  display-window: "#";
  display-windowcd: "#";
  display-run: "$";
  display-ssh: "ssh";
  display-drun: "~";
  display-combi: "combi";
  display-keys: "key";
  drun-display-format: "{name}";
  drun-match-fields: "name";
  terminal: "wezterm";
  matching: "fuzzy";
  dpi: 144;
  scroll-method: 1;
  window-format: "{c} - {t}";
  ssh-command: "wezterm ssh {host}";
  run-shell-command: "wezterm -e '{cmd}'";
  icon-theme: "Paper";
  kb-mode-next: "Alt+l,Alt+Right";
  kb-mode-previous: "Alt+h,Alt+Left";
  kb-row-up: "Up,Alt+k";
  kb-row-down: "Down,Alt+j";
}

@theme "theme.rasi"
