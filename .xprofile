#!/bin/bash

HOME=/home/pierre

[[ -f "$HOME/.Xresources" ]] && xrdb -merge $HOME/.Xresources

# $PATH
export PATH=$PATH:$HOME/.local/bin
export PATH=$PATH:$HOME/.cargo/bin
export PATH=$PATH:$HOME/.gem/ruby/2.7.0/bin
export PATH=$PATH:$HOME/.yarn/bin
export PATH=$PATH:$HOME/.local/share/JetBrains/Toolbox/scripts
export PATH=$PATH:$HOME/.local/share/JetBrains/Toolbox/bin

export XDG_CONFIG_HOME=$HOME/.config
export SSH_AUTH_SOCK=/run/user/1000/keyring/ssh
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib
export QT_AUTO_SCREEN_SCALE_FACTOR=1
export EDITOR=/usr/bin/nvim
export VISUAL=/usr/bin/nvim
export JAVA_HOME=/usr/lib/jvm/default
export XDG_SESSION_TYPE=X11
export MANPAGER='nvim +Man!'
export MAKEFLAGS='-j8'
export FZF_DEFAULT_OPTS="--bind 'ctrl-w:toggle-preview-wrap,ctrl-p:toggle-preview,ctrl-a:toggle-all,alt-j:preview-half-page-down,alt-k:preview-half-page-up' --color='bg:-1,fg:-1,preview-bg:-1,preview-fg:-1,border:black:bold,bg+:#323232,fg+:-1:regular,hl:magenta:bold,hl+:magenta:bold,gutter:-1,pointer:yellow,prompt:blue,marker:green,spinner:bright-cyan,info:cyan:italic,header:blue:bold,query:-1:bold' --pointer=❱ --marker=❯ --prompt='❯ '"
export FZF_DEFAULT_COMMAND="fd -HI -t f"
export XDG_DATA_DIRS=$HOME/.local/share/flatpak/exports/share:/var/lib/flatpak/exports/share:/usr/local/share:/usr/share
export NNN_OPTS=QAuex
export NNN_COLORS=2341
export NNN_PLUG='t:-_bat $nnn;f:-_|firefox $nnn*'
export NNN_BMS='h:~;d:~/Documents/dotfiles;r:/;m:/run/media/pierre;v:~/.config/nvim;n:~/Documents/nym/nym;x:/opt/xmonad'
export NNN_FCOLORS='0505040a00060e0801030301'
export BG_PRIMARY=$HOME/Images/Brothers_in_the_Mist,_South_Iceland-by_Kiliii_Yuyan.jpg
export BG_SECONDARY=$HOME/Images/Brothers_in_the_Mist,_South_Iceland-by_Kiliii_Yuyan.jpg
# export BG_PRIMARY=$home/Images/dark_ocean.png
# export BG_SECONDARY=$home/Images/dark_ocean.png
export _JAVA_AWT_WM_NONREPARENTING=1
export LIBVA_DRIVER_NAME=vdpau

if [ "$XDG_SESSION_DESKTOP" = 'rosu' ]; then
  (baru | xrootwin) &
fi

# Nodejs
export PATH=$PATH:/opt/node16/bin
